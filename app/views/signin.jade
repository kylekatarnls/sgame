extends layouts/insearch

block title
	params = array('title' => §('user.title'/*§:title - Espace Membre§*/, array('title' => §('global.title'/*§InSearch§*/))))
	=§('user.signin.title'/*§:title - S'inscrire§*/, $params)

block content
	h1
		=§('user.signin.title'/*§:title - S'inscrire§*/, $params)

	!=Form::open('/user/signin', array('class' => 'login'))
		!=Form::hidden('back-url', backUri('/user/signin'));
		.input-group
			.input-group-addon
				span.glyphicon.glyphicon-user
			!=Form::text('email', '', 'form-control', §('user.email'/*§Adresse e-mail§*/))
		.input-group
			.input-group-addon
				span.glyphicon.glyphicon-lock
			!=Form::password('password', '', 'form-control', §('user.password'/*§Mot de passe§*/))
		.input-group
			.input-group-addon
				span.glyphicon.glyphicon-lock
			!=Form::password('password-confirm', '', 'form-control', §('user.signin.password-confirm'/*§Confirmation du mot de passe§*/))
		.input-group
			button.remember-me.btn.btn-default(type="button")
				=§('user.remember-me'/*§Se souvenir de moi§*/)
			!=Form::hidden('remember-me');
		.input-group
			button.btn.btn-default(type="submit")
				=§('user.signin.signin'/*§S'inscrire§*/)
	!=Form::close()
