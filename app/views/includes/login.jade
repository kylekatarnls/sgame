
!=Form::open('/user/login', array('class' => 'login'))
	!=Form::hidden('back-url', backUri('/user/login'));
	.input-group
		.input-group-addon
			span.glyphicon.glyphicon-user
		!=Form::text('email', '', 'form-control', §('user.email'/*§Adresse e-mail§*/))
	.input-group
		.input-group-addon
			span.glyphicon.glyphicon-lock
		!=Form::password('password', '', 'form-control', §('user.password'/*§Mot de passe§*/))
	.input-group
		button.remember-me.btn.btn-default(type="button")
			=§('user.remember-me'/*§Se souvenir de moi§*/)
		!=Form::hidden('remember-me');
	.input-group
		button.btn.btn-default(type="submit")
			=§('user.login.connection'/*§Connexion§*/)
	div
		a(href="/user/signin")
			=§('user.signin.signin'/*§S'inscrire§*/)
		a(href="/user/forget-password")
			=§('user.forget-password.forget-password'/*§Mot de passe oublié ?§*/)
!=Form::close()
